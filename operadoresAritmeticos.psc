Algoritmo operadoresAritmeticos
	//suma
	a = 3 + 4;
	Escribir 'Suma: ',a;
	
	//resta
	b = 6 - 2
	Imprimir  'Resta: ',b;
	//multiplicación
	c = a * 2
	Escribir 'Multiplicación: ', c;
	//división
	d = b / c;
	Escribir 'División: ', d;
	//potencia ^
	e = a ^ 2;
	Imprimir 'Potencia: ', e;
	//modulo (residuo division)
	f = 9 % 4;
	Escribir 'Modulo: ', f;
FinAlgoritmo
